# -*- coding:utf-8 -*-
import re

list = {}

with open("C:\Users\Zzz\Desktop\ext.txt", 'r+') as f:
    for line in f:
        match = re.findall(r'[^a-zA-Z]+', line)
        for i in match:
            line = line.replace(i, '')
        for x in line:
            if x not in list:
                list[x] = 1
            else:
                list[x] = list[x]+1
for k,v in list.items():
    print k,v
